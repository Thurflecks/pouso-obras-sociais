<!-- EVENTO EM DESTAQUE -->
<section class="evento-destaque">
    <h2 style="font-weight: bolder;">Evento em destaque</h2>
    <div class="container">
        <img class="evento-destaque-img" src="data:image/jpeg;base64,{{eventoPrincipal.foto}}"
            alt="Curso de computação">
        <div class="info">
            <h3 style="color: #E12323;" class="info-curso">{{eventoPrincipal.nome}}</h3>
            <br>
            <p class="info-curso"><strong style="color: #007bff">Horário:</strong>
                <strong>{{eventoPrincipal.horario}}</strong></p>
            <br>
            <p class="info-curso"><strong style="color: #007bff">Dias da semana:</strong>
                <strong>{{eventoPrincipal.diaSemana}}</strong>
            </p>
            <br>
            <p class="info-curso"><strong style="color: #1A3A4D;">Data: {{eventoPrincipal.prazo}}</strong></p>
        </div>
    </div>
</section>

<!-- OUTROS EVENTOS -->
<section class="outros-eventos">
    <div class="container">
        <h2 style="font-weight: bolder;">Outros eventos</h2>
        <div class="carousel">
            <button class="prev">&#10094;</button>
            <div class="carousel-track">
                {{#if eventosAjeitados.length}}
                {{#each eventosAjeitados}}
                <div class="card">
                    <div class="card-header">
                        <img class="card-image" src="data:image/jpeg;base64,{{foto}}" alt="{{nome}}">
                    </div>
                    <div class="card-content">
                        <h3 style="color: #E12323;" class="info-curso">{{nome}}</h3>
                        <br>
                        <p class="info-curso"><strong style="color: #007bff">Horário:</strong>
                            <strong>{{horario}}</strong></p>
                        <br>
                        <p class="info-curso"><strong style="color: #007bff">Dias da semana:</strong>
                            <strong>{{diaSemana}}</strong></p>
                        <br>
                        <p class="info-curso"><strong style="color: #1A3A4D;">Data: {{prazo}}</strong></p>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <p>Nenhum evento encontrado</p>
                {{/if}}
            </div>
            <button class="next">&#10095;</button>
        </div>
    </div>
</section>
