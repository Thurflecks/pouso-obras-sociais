<head>
    <link rel="stylesheet" href="/css/admin/nav.css">
    <link rel="stylesheet" href="/css/admin/usuarios.css">
</head>
<nav class="navbar-admin">
    <div class="nav-container">
        <div class="logo-container">
            <img src="/assets/logos/logo.svg" alt="Pouso Obras Sociais" class="nav-logo">
        </div>
        <div class="nav-direita">
            <a href="/admin/usuarios" class="nav-voltar-btn">
                <i class="fas fa-arrow-left"></i>
                Voltar para Usuários
            </a>
        </div>
    </div>
</nav>

<section class="container-eventos-editar">
    <div class="evento-editar-form">
        <h1 class="titulo-editar">Editar Usuário</h1>
        <form action="/admin/usuarios/editar/{{usuario.id_usuario}}" method="POST">
            <div class="form-column">
                <div class="form-group">
                    <label for="nome">Nome:</label>
                    <input type="text" id="nome" name="nome" value="{{usuario.nome}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="cpf">CPF:</label>
                    <input type="text" id="cpf" name="cpf" value="{{usuario.cpf}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="telefone">Telefone:</label>
                    <input type="text" id="telefone" name="telefone" value="{{usuario.telefone}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="endereco">Endereço:</label>
                    <input type="text" id="endereco" name="endereco" value="{{usuario.endereco}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="bairro">Bairro:</label>
                    <input type="text" id="bairro" name="bairro" value="{{usuario.bairro}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="cep">CEP:</label>
                    <input type="text" id="cep" name="cep" value="{{usuario.cep}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="cidade">Cidade:</label>
                    <input type="text" id="cidade" name="cidade" value="{{usuario.cidade}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="UF">UF:</label>
                    <input type="text" id="UF" name="UF" value="{{usuario.UF}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="trabalho">Trabalho:</label>
                    <input type="text" id="trabalho" name="trabalho" value="{{usuario.trabalho}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="local_trabalho">Local de Trabalho:</label>
                    <input type="text" id="local_trabalho" name="local_trabalho" value="{{usuario.local_trabalho}}"
                        class="table-input">
                </div>
                <div class="form-group">
                    <label for="data_nasc">Data de Nascimento:</label>
                    <input type="date" id="data_nasc" name="data_nasc" value="{{usuario.data_nasc}}"
                        class="table-input">
                </div>
                <div class="form-group">
                    <label for="rg">RG:</label>
                    <input type="text" id="rg" name="rg" value="{{usuario.rg}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="faixa_etaria">Faixa Etária:</label>
                    <input type="text" id="faixa_etaria" name="faixa_etaria" value="{{usuario.faixa_etaria}}"
                        class="table-input">
                </div>
                <div class="form-group">
                    <label for="escolaridade">Escolaridade:</label>
                    <input type="text" id="escolaridade" name="escolaridade" value="{{usuario.escolaridade}}"
                        class="table-input">
                </div>
                <div class="form-group">
                    <label for="form_tecnica">Formação Técnica:</label>
                    <input type="text" id="form_tecnica" name="form_tecnica" value="{{usuario.form_tecnica}}"
                        class="table-input">
                </div>
            </div>
            <div class="form-column">
                <div class="form-group">
                    <label for="qnt_membros_familia">Membros da Família:</label>
                    <input type="text" id="qnt_membros_familia" name="qnt_membros_familia"
                        value="{{usuario.qnt_membros_familia}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="qnt_menor_idade">Menores de Idade:</label>
                    <input type="text" id="qnt_menor_idade" name="qnt_menor_idade" value="{{usuario.qnt_menor_idade}}"
                        class="table-input">
                </div>
                <div class="form-group">
                    <label for="etnia">Etnia:</label>
                    <input type="text" id="etnia" name="etnia" value="{{usuario.etnia}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="tipo_moradia">Tipo de Moradia:</label>
                    <input type="text" id="tipo_moradia" name="tipo_moradia" value="{{usuario.tipo_moradia}}"
                        class="table-input">
                </div>
                <div class="form-group">
                    <label for="situacao_moradia">Situação da Moradia:</label>
                    <input type="text" id="situacao_moradia" name="situacao_moradia"
                        value="{{usuario.situacao_moradia}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="transporte">Transporte:</label>
                    <input type="checkbox" id="transporte" name="transporte" {{#if usuario.transporte}}checked{{/if}}>
                </div>
                <div class="form-group">
                    <label for="part_economica">Participação Econômica:</label>
                    <input type="text" id="part_economica" name="part_economica" value="{{usuario.part_economica}}"
                        class="table-input">
                </div>
                <div class="form-group">
                    <label for="situacao_trabalho">Situação de Trabalho:</label>
                    <input type="text" id="situacao_trabalho" name="situacao_trabalho"
                        value="{{usuario.situacao_trabalho}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="renda_familia">Renda Familiar:</label>
                    <input type="text" id="renda_familia" name="renda_familia" value="{{usuario.renda_familia}}"
                        class="table-input">
                </div>
                <div class="form-group">
                    <label for="beneficio">Benefício:</label>
                    <input type="checkbox" id="beneficio" name="beneficio" {{#if usuario.beneficio}}checked{{/if}}>
                </div>
                <div class="form-group">
                    <label for="tipo_beneficio">Tipo de Benefício:</label>
                    <input type="text" id="tipo_beneficio" name="tipo_beneficio" value="{{usuario.tipo_beneficio}}"
                        class="table-input">
                </div>
                <div class="form-group">
                    <label for="cad_unico">Cadastro Único:</label>
                    <input type="checkbox" id="cad_unico" name="cad_unico" {{#if usuario.cad_unico}}checked{{/if}}>
                </div>
                <div class="form-group">
                    <label for="nec_especial">Necessidade Especial:</label>
                    <input type="checkbox" id="nec_especial" name="nec_especial" {{#if
                        usuario.nec_especial}}checked{{/if}}>
                </div>
                <div class="form-group">
                    <label for="tipo_necessidade">Tipo de Necessidade:</label>
                    <input type="text" id="tipo_necessidade" name="tipo_necessidade"
                        value="{{usuario.tipo_necessidade}}" class="table-input">
                </div>
                <div class="form-group">
                    <label for="medi_continua">Medicação Contínua:</label>
                    <input type="checkbox" id="medi_continua" name="medi_continua" {{#if
                        usuario.medi_continua}}checked{{/if}}>
                </div>
            </div>
            <div class="buttons-evento-editar">
                <button type="submit" class="button-save">Salvar Alterações</button>
            </div>
        </form>
    </div>
</section>