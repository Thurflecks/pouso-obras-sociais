<head>
    <link rel="stylesheet" href="/css/mantimentos.css">
</head>

<header class="header-estoque">
    <h1><i class="fas fa-box-open"></i> Controle de Estoque</h1>
    <div class="usuario-info">
        <span>{{session.user.cpf}}</span>
        <i class="fas fa-user-circle iconUser"></i>
    </div>
</header>

<main class="container-estoque">
    <a href="/admin" class="voltar-inicio">
        <i class="fa-solid fa-left-long"></i> Voltar para a Página de Administrador
    </a>
    <section class="secao-lista">
        <h2><i class="fas fa-boxes"></i> Itens em Estoque</h2>
        <div id="produtos-container">

            <table id="estoqueTable">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Doador</th>
                        <th>Telefone</th>
                        <th>Data</th>
                        <th>Descrição</th>
                        <th>Categoria</th>
                        <th>Editar</th>
                        <th>Deletar</th>
                        <th>Saída</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each mantimentosAjeitados}}
                    <tr>
                        <td>{{nome}}</td>
                        <td>{{quantidade}}</td>
                        <td>{{doador}}</td>
                        <td>{{telefoneDoador}}</td>
                        <td>{{data}}</td>
                        <td>{{descricao}}</td>
                        <td>{{categoria}}</td>
                        <td><a class="actions" href="/admin/mantimentos/edit/{{id}}"><i class='bx bx-edit-alt'></i></a>
                        </td>
                        <td><a class="actions" href="/admin/mantimentos/delete/{{id}}"><i class='bx bx-trash'></i></a>
                        </td>
                        <td>
                            <form action="/admin/mantimentos/saida/{{id}}" method="post" class="formSaida">
                                <input type="number" name="saida" class="inputSaida" placeholder="Saída" min="1" max={{quantidade}} required>
                                <button class="buttonSaida" type="submit">RETIRAR</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="addItem">
                <a href="/admin/mantimentos/add"><i class="fas fa-plus-circle"></i> Cadastrar Novo Item</a>
            </div>
        </div>
    </section>
</main>