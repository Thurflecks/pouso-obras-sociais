<head>
    <link rel="stylesheet" href="/css/admin/nav.css">
    <link rel="stylesheet" href="/css/admin/usuarios.css">
</head>
<nav class="navbar-admin">
    <div class="nav-container">
        <div class="logo-container">
            <img src="/assets/logos/logo.svg" alt="Pouso Obras Sociais" class="nav-logo">
        </div>
        <div class="nav-direita">
            <a href="/admin" class="nav-voltar-btn">
                <i class="fas fa-arrow-left"></i>
                Voltar ao Painel Administrativo
            </a>
        </div>
    </div>
</nav>
<section class="section-principal">
    <div class="search-container">
        <div class="search-bar-container">
            <form action="" class="search-bar-form" method="get">
                <input type="text" name="search" class="search-input" placeholder="Pesquisar...">
                <select name="column" id="column">
                    <option value="nome">Nome</option>
                    <option value="cpf">CPF</option>
                    <option value="telefone">Telefone</option>
                </select>
                <button type="submit" class="search-button">
                    <i class="fas fa-search"></i>
                </button>
            </form>
            <a href="/admin/usuarios" class="limparPesquisa">Limpar Pesquisa</a>
        </div>
        <div class="order-container">
            <span class="order-span"> Ordenar por: </span>
            <form action="" method="get">
                <input type="hidden" name="search" value="{{this.search}}">
                <input type="hidden" name="order" value="new">
                <button type="submit" class="order-button">
                    <i class="fas fa-arrow-up"></i>
                </button>
            </form>
            <form action="" method="get">
                <input type="hidden" name="search" value="{{this.search}}">
                <input type="hidden" name="order" value="old">
                <button type="submit" class="order-button">
                    <i class="fas fa-arrow-down"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="cadastradas-container">
        <div class="cadastro-title-content">
            <span class="cadastro-title"> <i class="fa-solid fa-pills"></i> Pessoas cadastradas</span>
        </div>
    </div>
    {{#each usuarios}}
    <div class="table-farm-container">
        <div class="table-farm">
            <div class="table">
                <strong class="strong-table">Nome:</strong>
                <div class="div-table">{{this.nome}}</div>
            </div>
            <div class="table">
                <strong class="strong-table">Telefone:</strong>
                <div class="div-table">{{this.telefone}}</div>
            </div>
            <div class="table">
                <strong class="strong-table">Bairro:</strong>
                <div class="div-table">{{this.bairro}}</div>
            </div>
        </div>
        <div class="aumentar">
            <a href="/admin/usuarios/editar/{{this.id_usuario}}" class="show">
                <i class="fas fa-edit iconDes"></i>
            </a>
        </div>
    </div>
    {{/each}}
</section>