<form id="formulario" action="/user/add_cadastro" method="POST">

    <div id="progresso-formulario">
        <div class="linha-conectora"></div>
        <div class="etapa" data-secao="secao1"><span class="bolinha"></span> Ficha Socioeconômica</div>
        <div class="etapa" data-secao="secao3"><span class="bolinha"></span> Atividade Profissional</div>
        <div class="etapa" data-secao="secao6"><span class="bolinha"></span> Moradia e Transporte</div>
        <div class="etapa" data-secao="secao10"><span class="bolinha"></span> Situação Trabalhista e Renda</div>
        <div class="etapa" data-secao="secao12"><span class="bolinha"></span> Benefícios e Necessidades Especiais</div>
    </div>


    <!-- Seção 1 -->
    <div class="secao" id="secao1">
        <h2>Ficha Socioeconômica</h2>

        <!-- Linha 1: Nome -->
        <div class="linha-campos">
            <div class="campo" style="flex: 1 1 100%;">
                <label for="nome">Nome completo:</label>
                <input type="text" id="nome" name="nome">
                <p class="erro" style="color:red; display:none;">Preencha o nome.</p>
            </div>
        </div>

        <!-- Linha 2: Data de nascimento + Telefone -->
        <div class="linha-campos">
            <div class="campo">
                <label for="dataNascimento">Data de Nascimento:</label>
                <input type="date" id="dataNascimento" name="dataNascimento">
                <p class="erro" style="color:red; display:none;">Informe a data de nascimento.</p>
            </div>

            <div class="campo">
                <label for="telefone">Telefone:</label>
                <input type="tel" id="telefone" name="telefone" inputmode="numeric" pattern="\d*">
                <p class="erro" style="color:red; display:none;">Informe o telefone.</p>
            </div>
        </div>

        <!-- Linha 3: CPF + Identidade -->
        <div class="linha-campos">
            <div class="campo">
                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="cpf" inputmode="numeric">
                <p class="erro" style="color:red; display:none;">Informe o CPF.</p>
            </div>

            <div class="campo">
                <label for="identidade">Carteira de Identidade:</label>
                <input type="text" id="identidade" name="identidade">
                <p class="erro" style="color:red; display:none;">Carteira de Identidade</p>
            </div>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao1()">Próximo</button>
        </div>
    </div>

    <div class="secao" id="secao2">
        <h2>Informações Adicionais</h2>

        <div class="form-section">
            <label for="endereco">Endereço:</label>
            <input type="text" id="endereco" name="endereco" required>
            <p class="erro" style="color:red; display:none;">Preencha o endereço.</p>
        </div>

        <div class="form-section">
            <label for="bairro">Bairro:</label>
            <input type="text" id="bairro" name="bairro" required>
            <p class="erro" style="color:red; display:none;">Preencha o bairro.</p>
        </div>

        <div class="form-section">
            <label for="cep">CEP:</label>
            <input type="text" id="cep" name="cep" required>
            <p class="erro" style="color:red; display:none;">Preencha o CEP.</p>
        </div>

        <div class="form-section">
            <label for="cidade">Cidade:</label>
            <input type="text" id="cidade" name="cidade" required>
            <p class="erro" style="color:red; display:none;">Preencha a cidade.</p>
        </div>

        <div class="form-section">
            <label for="uf">UF:</label>
            <select id="uf" name="uf" required>
                <option value="">Selecione</option>
                <option value="AC">AC - Acre</option>
                <option value="AL">AL - Alagoas</option>
                <option value="AP">AP - Amapá</option>
                <option value="AM">AM - Amazonas</option>
                <option value="BA">BA - Bahia</option>
                <option value="CE">CE - Ceará</option>
                <option value="DF">DF - Distrito Federal</option>
                <option value="ES">ES - Espírito Santo</option>
                <option value="GO">GO - Goiás</option>
                <option value="MA">MA - Maranhão</option>
                <option value="MT">MT - Mato Grosso</option>
                <option value="MS">MS - Mato Grosso do Sul</option>
                <option value="MG">MG - Minas Gerais</option>
                <option value="PA">PA - Pará</option>
                <option value="PB">PB - Paraíba</option>
                <option value="PR">PR - Paraná</option>
                <option value="PE">PE - Pernambuco</option>
                <option value="PI">PI - Piauí</option>
                <option value="RJ">RJ - Rio de Janeiro</option>
                <option value="RN">RN - Rio Grande do Norte</option>
                <option value="RS">RS - Rio Grande do Sul</option>
                <option value="RO">RO - Rondônia</option>
                <option value="RR">RR - Roraima</option>
                <option value="SC">SC - Santa Catarina</option>
                <option value="SP">SP - São Paulo</option>
                <option value="SE">SE - Sergipe</option>
                <option value="TO">TO - Tocantins</option>
            </select>
            <p class="erro" style="color:red; display:none;">Selecione o estado (UF).</p>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao2()">Próximo</button>
        </div>
    </div>

    <div class="secao" id="secao3">
        <h2>Atividade Profissional</h2>

        <div class="form-section">
            <label for="local_trabalho">Local de Trabalho:</label>
            <input type="text" id="local_trabalho" name="local_trabalho" required>
            <p class="erro" style="color:red; display:none;">Informe o local de trabalho.</p>
        </div>

        <div class="form-section">
            <label for="profissao">Profissão:</label>
            <input type="text" id="profissao" name="profissao" required>
            <p class="erro" style="color:red; display:none;">Informe a profissão.</p>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao3()">Prosseguir</button>
        </div>
    </div>

    <!-- Seção 4 -->
    <div class="secao" id="secao4">
        <h2>Ficha Socioeconômica</h2>

        <label>Qual a faixa etária?</label>
        <div class="opcoes">
            <label><input type="radio" name="faixa_etaria" value="18_29"> 18 a 29 anos</label>
            <label><input type="radio" name="faixa_etaria" value="30_49"> 30 a 49 anos</label>
            <label><input type="radio" name="faixa_etaria" value="50_60"> 50 a 60 anos</label>
            <label><input type="radio" name="faixa_etaria" value="61+"> 61 ou mais</label>
        </div>
        <p class="erro" style="color:red; display:none;">Selecione uma faixa etária.</p>

        <label>Qual o seu grau de instrução?</label>
        <div class="opcoes">
            <label><input type="radio" name="grau_instrucao" value="analfabeto"> Analfabeto</label>
            <label><input type="radio" name="grau_instrucao" value="fundamental1"> Ens.Fundamental 1</label>
            <label><input type="radio" name="grau_instrucao" value="fundamental2"> Ens.Fundamental 2</label>
            <label><input type="radio" name="grau_instrucao" value="medio"> 2° Grau (Ens.Médio)</label>
            <label><input type="radio" name="grau_instrucao" value="superior"> Superior</label>
        </div>
        <p class="erro" style="color:red; display:none;">Selecione o grau de instrução.</p>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao4()">Prosseguir</button>
        </div>
    </div>

    <!-- Seção 3 -->
    <div class="secao" id="secao5">
        <h2>Ficha Socioeconômica</h2>

        <div class="form-section">
            <label for="formacao_tecnica">Você tem alguma formação técnica?</label>
            <input type="text" name="formacao_tecnica" id="formacao_tecnica">
            <p class="erro">Informe a formação técnica (ou escreva "Não").</p>
        </div>

        <div class="form-section linha-horizontal">
            <div class="campo-lado-a-lado">
                <label for="num_pessoas">Número total de pessoas na residência:</label>
                <input type="number" id="num_pessoas" name="num_pessoas" required>
                <p class="erro">Informe a quantidade de membros da família.</p>
            </div>

            <div class="campo-lado-a-lado">
                <label for="num_criancas">Número de crianças:</label>
                <input type="number" id="num_criancas" name="num_criancas" required>
                <p class="erro">Informe quantos são menores de idade.</p>
            </div>
        </div>

        <div class="form-section">
            <label>Como você se considera?</label>
            <div class="opcoes">
                <label><input type="radio" name="etnia" value="branco"> Branco(a)</label>
                <label><input type="radio" name="etnia" value="negro"> Negro(a)</label>
                <label><input type="radio" name="etnia" value="pardo"> Pardo(a)/Mulato(a)</label>
                <label><input type="radio" name="etnia" value="amarelo"> Amarelo(a)</label>
                <label><input type="radio" name="etnia" value="indigena"> Indígena</label>
            </div>
            <p class="erro">Selecione uma opção de etnia.</p>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao5()">Prosseguir</button>
        </div>
    </div>

    <!-- Seção 4 -->
    <div class="secao" id="secao6">
        <h2>Moradia e Transporte</h2>

        <div class="form-section">
            <label>Tipo de moradia:</label>
            <div class="opcoes">
                <label><input type="checkbox" name="tipo_moradia" value="tijolo_revestido"> Tijolo revestido</label>
                <label><input type="checkbox" name="tipo_moradia" value="tijolo_sem_revestimento"> Tijolo sem
                    revestimento</label>
                <label><input type="checkbox" name="tipo_moradia" value="taipa"> Taipa</label>
                <label><input type="checkbox" name="tipo_moradia" value="palha"> Palha</label>
                <label><input type="checkbox" name="tipo_moradia" value="madeira"> Madeira</label>
                <label><input type="checkbox" name="tipo_moradia" value="outros"> Outros</label>
            </div>
            <p class="erro" style="color:red; display:none;">Selecione pelo menos um tipo de moradia.</p>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao6()">Prosseguir</button>
        </div>
    </div>

    <div class="secao" id="secao7">
        <h2>Situação de Moradia</h2>

        <div class="form-section">
            <label>Situação atual de moradia:</label>
            <div class="opcoes">
                <label><input type="radio" name="situacao_moradia" value="propria"> Casa própria</label>
                <label><input type="radio" name="situacao_moradia" value="financiada"> Casa financiada</label>
                <label><input type="radio" name="situacao_moradia" value="alugada"> Casa alugada</label>
                <label><input type="radio" name="situacao_moradia" value="cedida"> Casa cedida</label>
                <label><input type="radio" name="situacao_moradia" value="mantida"> Mantida por entidade</label>
                <label><input type="radio" name="situacao_moradia" value="outros"> Outros</label>
            </div>
            <p class="erro" style="color:red; display:none;">Selecione uma situação de moradia.</p>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao7()">Prosseguir</button>
        </div>
    </div>

    <div class="secao" id="secao8">
        <h2>Meio de Transporte</h2>

        <div class="form-section">
            <label>Possui meio de transporte?</label>
            <div class="opcoes">
                <label><input type="radio" name="meio_transporte" value="sim"> Sim</label>
                <label><input type="radio" name="meio_transporte" value="nao"> Não</label>
            </div>
            <p class="erro" style="color:red; display:none;">Selecione uma opção.</p>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao8()">Prosseguir</button>
        </div>
    </div>

    <div class="secao" id="secao9">
        <h2>Participação Econômica</h2>
        <label>Qual sua participação na vida econômica do seu grupo familiar?</label>
        <div class="form-section opcoes">

            <label>
                <input type="radio" name="participacao_economica" value="recebe_ajuda">
                Trabalho, mas recebo ajuda financeira da família ou de outras pessoas
            </label>

            <label>
                <input type="radio" name="participacao_economica" value="sustento_proprio">
                Trabalho, mas sou responsável pelo meu próprio sustento
            </label>

            <label>
                <input type="radio" name="participacao_economica" value="sustento_e_contribui">
                Trabalho, sou responsável pelo meu sustento e contribuo para o sustento da família
            </label>

            <label>
                <input type="radio" name="participacao_economica" value="principal_responsavel">
                Trabalho e sou principal responsável pelo sustento da minha família
            </label>

            <label>
                <input type="radio" name="participacao_economica" value="nao_trabalha">
                Não trabalho e sou sustentado pela família ou por outras pessoas
            </label>

            <p class="erro" style="color:red; display:none;">Selecione uma opção.</p>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao9()">Prosseguir</button>
        </div>
    </div>

    <!-- Seção 5 -->
    <div class="secao" id="secao10">
        <h2>Situação Trabalhista e Renda</h2>

        <label>Situação trabalhista atual:</label>
        <div class="opcoes">
            <label><input type="radio" name="situacao_trabalhista" value="agricultor"> Lavrador/Agricultor</label>
            <label><input type="radio" name="situacao_trabalhista" value="servidor"> Servidor Público</label>
            <label><input type="radio" name="situacao_trabalhista" value="diarista"> Doméstica/Diarista</label>
            <label><input type="radio" name="situacao_trabalhista" value="privada"> Empresa privada</label>
            <label><input type="radio" name="situacao_trabalhista" value="autonomo"> Autônomo ou informal</label>
            <label><input type="radio" name="situacao_trabalhista" value="negocio"> Pequeno negócio</label>
            <label><input type="radio" name="situacao_trabalhista" value="desempregado"> Desempregado</label>
            <label><input type="radio" name="situacao_trabalhista" value="aposentado"> Aposentado</label>
            <label><input type="radio" name="situacao_trabalhista" value="nunca_trabalhou"> Nunca trabalhou</label>
            <label><input type="radio" name="situacao_trabalhista" value="empregado(a)"> Empregado(a)</label>
            <label><input type="radio" name="situacao_trabalhista" value="outro"> Outro</label>
        </div>
        <p class="erro" style="color:red; display:none;">Selecione uma opção.</p>

        <div id="outroDescricaoContainer" style="display:none;">
            <label for="descricao_outro">Descreva:</label>
            <input type="text" id="descricao_outro" name="descricao_outro">
            <p class="erro" style="color:red; display:none;">Informe a descrição se "Outro" for selecionado.</p>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao10()">Prosseguir</button>
        </div>
    </div>

    <div class="secao" id="secao11">
        <h2>Renda Familiar</h2>
        <fieldset>
            <legend>Renda per capita da família:</legend>
            <div class="opcoes">
                <label><input type="radio" name="renda_percapta" value="ate_meio"> até ½ salário mínimo</label>
                <label><input type="radio" name="renda_percapta" value="ate_um_meio"> até 1 ½ salários mínimos</label>
                <label><input type="radio" name="renda_percapta" value="um_a_tres"> de 1 a 3 salários mínimos</label>
                <label><input type="radio" name="renda_percapta" value="mais_de_tres"> mais de 3 salários
                    mínimos</label>

                <p class="erro" style="color:red; display:none;">Selecione uma faixa de renda.</p>
            </div>
        </fieldset>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="button" onclick="validarSecao11()">Prosseguir</button>
        </div>
    </div>

    <!-- Seção 6 -->
    <div class="secao" id="secao12">
        <h2>Benefícios e Necessidades Especiais</h2>

        <label>Recebe benefício social?</label>
        <div class="opcoes">
            <label><input type="radio" name="beneficio_social" value="sim" required> Sim</label>
            <label><input type="radio" name="beneficio_social" value="nao" required> Não</label>
            <p class="erro" style="color:red; display:none;">Selecione uma opção sobre benefício social.</p>
        </div>

        <label>Se sim, qual?</label>
        <input type="text" name="qual_beneficio" id="qual_beneficio" required>
        <p class="erro" style="color:red; display:none;">Preencha o nome do benefício social.</p>

        <label>Tem Cadastro Único?</label>
        <select name="cadastro_unico" id="cadastro_unico" required>
            <option value="">Selecione</option>
            <option value="sim">Sim</option>
            <option value="nao">Não</option>
        </select>
        <p class="erro" style="color:red; display:none;">Informe se tem Cadastro Único.</p>

        <label>Pessoas com necessidades especiais na residência?</label>
        <div class="opcoes">
            <label><input type="radio" name="necessidades_especiais" value="sim" required> Sim</label>
            <label><input type="radio" name="necessidades_especiais" value="nao" required> Não</label>
            <p class="erro" style="color:red; display:none;">Informe se há pessoas com necessidades especiais.</p>
        </div>

        <label>Se sim, qual a necessidade?</label>
        <input type="text" name="descricao_necessidade" id="descricao_necessidade" required>
        <p class="erro" style="color:red; display:none;">Descreva a necessidade especial.</p>

        <!-- Pergunta sobre medicação contínua agora na Seção 12 -->
        <label>Necessita de medicação contínua?</label>
        <div class="opcoes">
            <label><input type="radio" name="medicacao_continua" value="sim" required> Sim</label>
            <label><input type="radio" name="medicacao_continua" value="nao" required> Não</label>
            <p class="erro" style="color:red; display:none;">Informe se necessita de medicação contínua.</p>
        </div>

        <div class="botoes">
            <button type="button" onclick="voltarSecao()">Voltar</button>
            <button type="submit">Finalizar</button>
        </div>
    </div>
</form>
