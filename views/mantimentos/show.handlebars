<head>
    <link rel="stylesheet" href="/css/mantimento.css">
</head>
<nav class="navbar-admin">
    <div class="nav-container">
        <!-- Logo à Esquerda -->
        <div class="logo-container">
            <img src="/assets/logos/logo.svg" alt="Pouso Obras Sociais" class="nav-logo">
        </div>

        <!-- Botões à direita -->
        <div class="nav-direita">
            <a href="/admin" class="nav-voltar-btn">
                <i class="fas fa-arrow-left"></i>
                Voltar ao Painel Administrativo
            </a>
        </div>
    </div>
</nav>
<main class="container">
    <!-- Lista de Itens -->
    <section class="lista-itens">
        <div class="items-box">
            <!-- Barra de pesquisar e botão de adicionar-->
            <div class="controle-superior">
                <div class="barra-pesquisa">
                    <form action="/admin/mantimentos/show" class="formPesquisa" method="get">
                        <div class="div-form-search">
                            <input type="text" placeholder="Pesquisar item..." name="search" class="input-pesquisa"
                                required>
                            <button type="submit" class="btn-pesquisar">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                    <a href="/admin/mantimentos/show" class="limparPesquisa">Limpar Pesquisa</a>
                </div>
                <div class="voltar-inicio">
                    <a href="/admin/mantimentos/add" class="btn-adicionar">
                        Adicionar Item
                    </a>
                </div>
            </div>
            <div class="order">
                <h2><i class="fas fa-list-ul"></i>Ordenar por: </h2>
                <form action="/admin/mantimentos/show" method="get">
                    <input type="hidden" name="search" value="{{this.search}}">
                    <input type="hidden" name="order" value="new">
                    <button type="submit" class="order-button">
                        <i class="fas fa-arrow-up"></i>
                    </button>
                </form>
                <form action="/admin/mantimentos/show" method="get">
                    <input type="hidden" name="search" value="{{this.search}}">
                    <input type="hidden" name="order" value="old">
                    <button type="submit" class="order-button">
                        <i class="fas fa-arrow-down"></i>
                    </button>
                </form>
            </div>
            <div class="itens-container">

                {{#each mantimentosAjeitados}}
                <div class="item-lista">
                    <div class="item-cabecalho">
                        <div class="item-info-principal">
                            <div class="item-meta">
                                <span class="item-nome">{{nome}}</span>
                                <span class="item-categoria">{{categoria}}</span>
                            </div>
                            <div class="item-descricao">
                                {{descricao}}
                            </div>
                        </div>
                    </div>

                    <div class="item-detalhes">
                        <div class="item-info">
                            <p><i class="fas fa-user"></i> Doador: {{doador}}</p>
                            <p><i class="fas fa-calendar"></i> Data de Entrada: {{data}}</p>
                            <p><i class="fas fa-calendar"></i> Data de Validade: {{#if data_validade}}{{data_validade}}{{else}}<i
                                class="fa-solid fa-circle-xmark"></i>{{/if}}</p>
                            <p><i class="fas fa-phone"></i> Contato: {{telefoneDoador}}</p>
                            <p><i class="fas fa-box"></i> Quantidade: {{quantidade}}</p>
                            <p><i class="fas fa-calendar"></i> Lote: {{#if lote}}{{lote}}{{else}}<i
                                class="fa-solid fa-circle-xmark"></i>{{/if}}</p>
                        </div>

                        <div class="item-acoes">
                            <div class="btn-group">
                                <a href="/admin/mantimentos/edit/{{id}}" class="btn-editar"><i class="fas fa-edit"></i>
                                    Editar</a>
                                <a href="/admin/mantimentos/delete/{{id}}" class="btn-deletar"><i
                                        class="fas fa-trash"></i> Deletar</a>
                            </div>
                            <form action="/admin/mantimentos/saida/{{id}}" method="post" class="saida-group">
                                <input type="number" name="saida" class="item-saida" placeholder="Saída" min="1"
                                    max={{quantidade}} required>
                                <button class="btn-saida" type="submit">RETIRAR</button>
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
</main>