<head>
    <link rel="stylesheet" href="/css/admin/eventos.css">
</head>
<nav class="navbar-admin">
    <div class="nav-container">
        <div class="logo-container">
            <img src="/assets/logos/logo.png" alt="Pouso Obras Sociais" class="nav-logo">
            <div>
                <span class="span-text">Gestão de Eventos</span>
                <span class="logo-text">Sistema de Controle de Eventos</span>
            </div>
        </div>
        <div class="nav-direita">
            <div class="usuario-info">
                <div class="dados-usuario">
                    <span class="usuario">Cpf: {{session.user.cpf}}</span>
                    <span class="usuario">Nome: {{session.user.nome}}</span>
                    <span class="usuario">Nível: {{session.user.nivel}}</span>
                </div>
                <a href="/admin" class="nav-voltar-btn-novo">
                    <i class="fas fa-arrow-left"></i>
                    <span>Voltar ao Painel Administrativo</span>
                </a>
            </div>
        </div>
    </div>
</nav>
<main class="container">
    <section class="lista-itens">
        <div class="items-box">
            <div class="controle-superior">
                <div class="voltar-inicio">
                    <a href="/admin/eventos/criar" class="btn-adicionar">
                        Novo Evento
                    </a>
                </div>
            </div>
            <div class="itens-container">
                {{#each eventos}}
                <div class="item-lista">
                    <div class="item-cabecalho">
                        <div class="item-info-principal">
                            <div class="item-meta">
                                <span class="item-nome">{{nome}}</span>
                            </div>
                            <div class="item-info">
                                <p><i class="fas fa-clock"></i> Horário: {{horario}}</p>
                                <p><i class="fas fa-calendar-day"></i> Dia: {{diaSemana}}</p>
                                <p><i class="fas fa-calendar"></i> Data: {{prazo}}</p>
                            </div>
                        </div>
                        {{#if foto}}
                            <div class="item-imagem">
                                <img src="data:image/jpeg;base64,{{foto}}" alt="{{nome}}" class="evento-imagem">
                            </div>
                        {{/if}}
                    </div>
                    <div class="item-acoes" style="align-self: flex-end;">
                        <div class="btn-group">
                            <a href="/admin/eventos/editar/{{id}}" class="btn-editar"><i class="fas fa-edit"></i>
                                Editar</a>
                            <form action="/admin/eventos/deletar/{{id}}" method="post" style="display: inline;">
                                <button type="submit" class="btn-deletar"><i class="fas fa-trash"></i> Deletar</button>
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
</main>