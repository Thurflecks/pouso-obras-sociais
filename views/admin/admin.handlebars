<head><link rel="stylesheet" href="/css/admin.css"></head>
<nav class="navbar-admin">
    <div class="nav-container">
        <!-- Logo -->
        <div class="logo-container">
            <img src="/assets/logos/logo.svg" alt="Pouso Obras Sociais" class="nav-logo">
            <div class="logo-text">
                <h1>Painel Administrativo</h1>
                <span>Sistema de Gestão Integrada</span>
            </div>
        </div>

        <!-- Lado direito -->
        <div class="nav-direita">
            <div class="usuario-info">
                <div class="dados-usuario">
                    <span class="usuario-cpf">CPF: {{session.user.cpf}}</span>
                    <span class="usuario-cargo">Nível: {{session.user.nivel}}</span>
                </div>
                <a href="/admin/logout" class="nav-voltar-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Sair
                </a>
            </div>
        </div>
    </div>
</nav>

<main class="container-admin">

    <!-- Seção de Conteúdo Principal -->
    <section class="secao-principal">
        <div class="controle-superior">
            <a href="/" class="voltar-inicio">
                <i class="fa-solid fa-arrow-left"></i> Voltar ao Início
            </a>
            <div class="status-sistema">
                <span class="online-indicator"></span>
                Sistema Online
            </div>
        </div>

        <!-- Cards de Funcionalidades -->
        <div class="grid-funcionalidades">
            <article class="card-admin destaque-perfil">
                <div class="card-header">
                    <i class="fas fa-user-edit"></i>
                    <h2>Editar Perfil</h2>
                </div>
                <div class="card-content">
                    <p>Alterar senha ou excluir conta administrativa</p>
                    <div class="botoes-perfil">
                        <a href="/admin/edit" class="btn-acao btn-alterar-senha">
                            <i class="fas fa-key"></i> Alterar Senha
                        </a>
                        <a href="/admin/delete" class="btn-acao btn-excluir">
                            <i class="fas fa-trash-alt"></i> Excluir Perfil
                        </a>
                    </div>
                </div>
            </article>

            <!-- Novo Administrador -->
            <article class="card-admin destaque-novo-admin">
                <div class="card-header">
                    <i class="fas fa-user-plus"></i>
                    <h2>Novo Administrador</h2>
                </div>
                <div class="card-content">
                    <p>Adicionar novo usuário ao painel administrativo</p>
                    <a href="/admin/register" class="btn-acao">
                        <i class="fas fa-plus-circle"></i> Criar Conta
                    </a>
                </div>
            </article>

            <!-- Relatórios -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-chart-bar"></i>
                    <h2>Relatórios</h2>
                </div>
                <div class="card-content">
                    <p>Gerar relatórios sobre login, depósito ou farmácia</p>
                    <a href="/admin/relatorio" class="btn-acao">
                        <i class="fas fa-file-export"></i> Gerar
                    </a>
                </div>
            </article>

            <!-- Aniversariantes -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-birthday-cake"></i>
                    <h2>Aniversariantes</h2>
                </div>
                <div class="card-content">
                    <p>2 aniversários hoje</p>
                    <button class="btn-acao">
                        <i class="fas fa-list"></i> Ver Lista
                    </button>
                </div>
            </article>

            <!-- Gestão de Famílias -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-users-gear"></i>
                    <h2>Gestão de Pessoas cadastradas</h2>
                </div>
                <div class="card-content">
                    <p>152 usuários cadastrados</p>
                    <button class="btn-acao">
                        <i class="fas fa-search"></i> Consultar
                    </button>
                </div>
            </article>

            <!-- Eventos -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-calendar-days"></i>
                    <h2>Eventos</h2>
                </div>
                <div class="card-content">
                    <p>Próximo evento: 30/07</p>
                    <button class="btn-acao">
                        <i class="fas fa-sliders"></i> Editar Eventos
                    </button>
                </div>
            </article>

            <!-- Conteúdo do Site -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-sliders"></i>
                    <h2>Conteúdo do Site</h2>
                </div>
                <div class="card-content">
                    <p>Atualizar banners e conteúdo</p>
                    <button class="btn-acao">
                        <i class="fas fa-edit"></i> Editar
                    </button>
                </div>
            </article>

            <!-- Controle do Depósito -->
            <article class="card-admin destaque-deposito">
                <div class="card-header">
                    <i class="fas fa-warehouse"></i>
                    <h2>Controle do Depósito</h2>
                </div>
                <div class="card-content">
                    <p>Gerenciamento completo de estoque e mantimentos</p>
                    <a href="/admin/mantimentos/show" class="btn-acao">
                        <i class="fas fa-box-open"></i> Acessar Depósito
                    </a>
                </div>
            </article>

            <!-- Controle Farmacêutico -->
            <article class="card-admin destaque-farmacia">
                <div class="card-header">
                    <i class="fas fa-prescription-bottle-medical"></i>
                    <h2>Controle Farmacêutico</h2>
                </div>
                <div class="card-content">
                    <p>Gestão de medicamentos e insumos médicos</p>
                    <a href="farmacia.html" class="btn-acao">
                        <i class="fas fa-pills"></i> Acessar Farmácia
                    </a>
                </div>
            </article>
        </div>

    </section>

    <!-- Seção de Ações Rápidas -->
    <div class="acoes-rapidas">
        <h3><i class="fas fa-bolt"></i> Ações Rápidas</h3>
        <div class="grid-acoes">
            <a href="/admin/register" class="btn-rapido">
                <i class="fas fa-user-plus"></i> Novo Cadastro
            </a>
        </div>
    </div>
    </section>
</main>

{{#if messages.message}}
<div class="erroNivel">
    <span>{{messages.message}}</span>
</div>
{{/if}}