<!-- Seção de outras formas de doar -->

<section class="form-section">
    <form class="white-background">
        <h3 class="section-title">Há outras formas de ajudar! Preencha seus dados abaixo e faça a diferença.</h3>

        <!-- Linha com nome, e-mail e WhatsApp -->
        <div class="input-row">
            <input type="text" placeholder="Informe o seu nome completo" class="form-input">
            <input type="tel" placeholder="Informe seu WhatsApp" class="form-input">
        </div>


        <!-- Campo para Data e Horário de Disponibilidade -->
        <div class="datetime-wrapper">
            <div class="form-group">
                <label for="dataDisponibilidade" class="form-label">Escolha a data e hora que você pretende comparecer
                    no Pouso para realizar a doação:</label>
                <input type="datetime-local" id="dataDisponibilidade" class="form-input">
            </div>
        </div>

        <!-- Caixa para informações adicionais -->
        <textarea placeholder="Envie uma mensagem ou informação adicional" class="form-textarea"></textarea>

        <!-- Legenda explicativa abaixo do campo -->
        <p class="form-note">*Sua solicitação com os dados informados será redirecionada para uma mensagem no WhatsApp
        </p>

        <!-- Botão vermelho -->
        <button class="btn-enviar red">Enviar solicitação de Doação</button>
    </form>
