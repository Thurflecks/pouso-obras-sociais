<head>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<header class="header-estoque">
    <div class="container-estoque">
        <h1><i class="fas fa-user-shield"></i> Painel Administrativo</h1>
        <div class="usuario-info">
            <span>{{cpfUser}}</span>
            <i class="fas fa-user-circle"></i>
            <a href="/admin/logout" class="btn-logout">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </div>
    </div>
</header>

<main class="container-admin">
    <!-- Seção de Conteúdo Principal -->
    <section class="secao-principal">
        <div class="controle-superior">
            <a href="/" class="voltar-inicio">
                <i class="fa-solid fa-arrow-left"></i> Voltar ao Início
            </a>
            <div class="status-sistema">
                <span class="online-indicator"></span>
                Sistema Online
            </div>
        </div>

        <!-- Cards de Funcionalidades -->
        <div class="grid-funcionalidades">
            <!-- Aniversariantes -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-birthday-cake"></i>
                    <h2>Aniversariantes</h2>
                </div>
                <div class="card-content">
                    <p>aaaaa</p>
                    <a href="" class="btn-acao">
                        <i class="fas fa-list"></i> Ver Lista
                    </a>
                </div>
            </article>

            <!-- Gestão de Famílias -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-users-gear"></i>
                    <h2>Gestão de Pessoas Cadastradas</h2>
                </div>
                <div class="card-content">
                    <p>aaaaa</p>
                    <a href="" class="btn-acao">
                        <i class="fas fa-search"></i> Consultar
                    </a>
                </div>
            </article>

            <!-- Eventos -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-calendar-days"></i>
                    <h2>Eventos</h2>
                </div>
                <div class="card-content">
                    <p>Próximo evento: 30/07</p>
                    <a href="" class="btn-acao">
                        <i class="fas fa-plus"></i> Novo
                    </a>
                </div>
            </article>

            <!-- Doações -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-hand-holding-heart"></i>
                    <h2>Histórico de Doações</h2>
                </div>
                <div class="card-content">
                    <p>Última doação: 25/06</p>
                    <a href="" class="btn-acao">
                        <i class="fas fa-history"></i> Ver Histórico
                    </a>
                </div>
            </article>

            <!-- Conteúdo do Site -->
            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-sliders"></i>
                    <h2>Conteúdo do Site</h2>
                </div>
                <div class="card-content">
                    <p>Atualizar banners e conteúdo</p>
                    <a href="" class="btn-acao">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                </div>
            </article>

            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-warehouse"></i>
                    <h2>Mantimentos</h2>
                </div>
                <div class="card-content">
                    <p>Controle de estoque</p>
                    <a href="/admin/mantimentos/all" class="btn-acao">
                        <i class="fas fa-search"></i> Acessar
                    </a>
                </div>
            </article>

            <article class="card-admin">
                <div class="card-header">
                    <i class="fas fa-tablets"></i>
                    <h2>Farmácia</h2>
                </div>
                <div class="card-content">
                    <p>Controle de estoque</p>
                    <a href="" class="btn-acao">
                        <i class="fas fa-search"></i> Acessar
                    </a>
                </div>
            </article>
        </div>

        <!-- Seção de Ações Rápidas -->
        <div class="acoes-rapidas">
            <h3><i class="fas fa-bolt"></i> Ações Rápidas</h3>
            <div class="grid-acoes">
                <a href=""  class="btn-rapido">
                    <i class="fas fa-user-plus"></i> Novo Cadastro
                </a>
                <a href="" class="btn-rapido">
                    <i class="fas fa-chart-pie"></i> Estatísticas
                </a>
            </div>
        </div>
    </section>
</main>